<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="autokatta.com.view.CompareVehicleListActivity"
    tools:showIn="@layout/activity_compare_vehicle_list">


    <RelativeLayout
        android:id="@+id/mainrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Comparision"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countcomp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="count"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainrl">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtcompname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:text="Company Name :"

                    />

                <TextView
                    android:id="@+id/txtmodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Model :"

                    />

                <TextView
                    android:id="@+id/txtversion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Version :"

                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/txtmakeyr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Make Year :"

                    />

                <TextView
                    android:id="@+id/txtregyr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:text="Registration Year :"

                    />

                <TextView
                    android:id="@+id/txtkm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"

                    android:text="KM Driven :"

                    />

                <TextView
                    android:id="@+id/txtcity"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="5dp"

                    android:text="City :"

                    />

                <TextView
                    android:id="@+id/txtregcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Regstration City :"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/txtowner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"

                    android:layout_marginTop="5dp"
                    android:text="No Of Owners :" />

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtowner"

                    android:layout_marginTop="5dp"
                    android:text="Ask Price :" />

                <TextView
                    android:id="@+id/txtregno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtprice"

                    android:layout_marginTop="5dp"
                    android:text="Registration No :" />

                <TextView
                    android:id="@+id/txthypo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtregno"

                    android:layout_marginTop="5dp"
                    android:text="Hypothetication :" />

                <TextView
                    android:id="@+id/txtinsurenceval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txthypo"

                    android:layout_marginTop="5dp"
                    android:text="Insurence Validity :" />

                <TextView
                    android:id="@+id/txtinsurenceIdv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtinsurenceval"

                    android:layout_marginTop="5dp"
                    android:text="Insurence Idv :" />

                <TextView
                    android:id="@+id/txtrcavailabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtinsurenceIdv"

                    android:layout_marginTop="5dp"
                    android:text="RC Available :" />

                <TextView
                    android:id="@+id/txtpermit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtrcavailabel"

                    android:layout_marginTop="5dp"
                    android:text="Permit Validity:" />

                <TextView
                    android:id="@+id/txttaxavailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtpermit"

                    android:layout_marginTop="5dp"
                    android:text="Tax Available :" />

                <TextView
                    android:id="@+id/txttaxpaid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txttaxavailable"
                    android:layout_marginTop="10dp"

                    android:text="Tax Paid Upto :"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txttaxpaid"

                    android:layout_marginTop="5dp"
                    android:text="Color :" />

                <TextView
                    android:id="@+id/txtfualtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtcolor"

                    android:layout_marginTop="5dp"
                    android:text="Fual type :" />

                <TextView
                    android:id="@+id/txttyrecon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtfualtype"
                    android:layout_marginTop="10dp"

                    android:text="Tyre Condition :"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtengineno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txttyrecon"

                    android:layout_marginTop="5dp"
                    android:text="Engine No :" />

                <TextView
                    android:id="@+id/txtchessicno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Chessic No :"

                    />

                <TextView
                    android:id="@+id/txtseatingcap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Seating Capacity :"

                    />

                <TextView
                    android:id="@+id/txtfeatness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Fitness Validity :"

                    />


                <TextView
                    android:id="@+id/txtdrivetype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Drive Type :"

                    />

                <TextView
                    android:id="@+id/txtbodystyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Body Style :"

                    />

                <TextView
                    android:id="@+id/txtair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Air Condition :"
                    android:visibility="gone"

                    />


                <TextView
                    android:id="@+id/txtbustype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Bus Type :"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/txtinvoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Invoice Availabel :"
                    android:visibility="gone"

                    />

                <TextView
                    android:id="@+id/txtappl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Application :"

                    />

                <TextView
                    android:id="@+id/txtimpl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Implement Attached :"
                    android:visibility="gone"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                >

                <com.androidbelieve.store.HorizontalListView
                    android:id="@+id/comphorizontl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </com.androidbelieve.store.HorizontalListView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
