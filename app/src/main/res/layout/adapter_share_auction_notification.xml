<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/relaprofilelike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C8C9CC">

                <ImageView
                    android:id="@+id/imgprofilelike"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/profile"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/auctionaction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/imgprofilelike"
                    android:layout_toStartOf="@+id/fvrtimg"
                    android:text="auctionaction"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileltime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/auctionaction"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toEndOf="@+id/imgprofilelike"
                    android:text="Day at time"
                    android:textColor="#808080" />

                <ImageView
                    android:id="@+id/fvrtimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/fav1"
                    android:contentDescription="@string/app_name"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/fvrtredimg"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/fav2"
                    android:contentDescription="@string/app_name"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relaprofilelike"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:text="Auction Title :"
                    android:textColor="#808080"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/auc_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView2"
                    android:text="-"
                    android:textColor="#808080" />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="No of vehicle :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/auc_noofvehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView3"
                    android:text="-"
                    android:textColor="#808080" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="End Date :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/auc_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView5"
                    android:text="-"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="End Time :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/auc_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView6"
                    android:text="-"
                    android:textColor="#808080" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView6"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Type of Auction :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/auc_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView7"
                    android:text="-"
                    android:textColor="#808080" />

                <RelativeLayout
                    android:id="@+id/relgoing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView7">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dip"
                        android:text="Going Count:"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/going_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView8"
                        android:layout_marginStart="5dip"
                        android:layout_toEndOf="@+id/textView8"
                        android:text="-"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relignore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relgoing">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dip"
                        android:text="Ignore Count:"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ignore_cnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView9"
                        android:layout_marginStart="5dip"
                        android:layout_toEndOf="@+id/textView9"
                        android:text="-"
                        android:textColor="#808080" />


                </RelativeLayout>


                <LinearLayout

                    android:id="@+id/relatebutton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/relignore"
                    android:layout_marginTop="5dp"
                    android:background="#80bebebe"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ignore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="Ignore"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/going"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="Going"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/relativeshare"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center">

                        <ImageButton
                            android:id="@+id/share1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/buttonback"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/autoshare"
                            android:text="Share"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textshare"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/share1"
                            android:background="@drawable/buttonback"
                            android:gravity="center"
                            android:text="SHARE"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>