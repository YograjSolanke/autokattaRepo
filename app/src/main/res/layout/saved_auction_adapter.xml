<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RL2"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/IV2">

                <TextView
                    android:id="@+id/auctiontitle2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:text="Auction Title"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    android:textColor="#808080"
                    android:id="@+id/typeofauction2"
                    android:hint="Auction Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/auctiontitle2"
                    android:layout_toEndOf="@+id/auctiontitle2"
                    android:enabled="false" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rl1"
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#808080"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="No.of vehicle"
                    android:id="@+id/noofvehicle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/noofvehicle"
                    android:hint="No of vehicle"
                    android:id="@+id/editvehicle"
                    android:textColor="#808080"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rl2"
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:layout_centerVertical="true"
                    android:id="@+id/start2"
                    android:text="Start:"
                    android:layout_marginLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/datetime3"
                    android:text="&amp;"
                    android:id="@+id/amp"
                    android:textColor="#808080"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:textSize="14sp"
                    android:id="@+id/datetime3"
                    android:hint="Date"
                    android:textColor="#808080"
                    android:gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/start2"
                    android:layout_toEndOf="@+id/start2"
                    android:layout_marginLeft="10dp"
                    android:enabled="false" />

                <EditText
                    android:textSize="14sp"
                    android:hint="Time"
                    android:textColor="#808080"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/amp"
                    android:layout_toEndOf="@+id/amp"
                    android:layout_marginLeft="10dp"
                    android:enabled="false" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rl3"
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/end2"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:text="End:"
                    android:layout_centerVertical="true"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/datetime2"
                    android:text="&amp;"
                    android:id="@+id/amp1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_toRightOf="@+id/amp1"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:hint="Time"
                    android:gravity="center_horizontal"
                    android:textColor="#808080"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:enabled="false" />

                <EditText
                    android:textSize="14sp"
                    android:id="@+id/datetime2"
                    android:hint="Date"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/end2"
                    android:layout_toEndOf="@+id/end2"
                    android:enabled="false" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:weightSum="100"
                android:layout_marginBottom="5dp"
                android:id="@+id/rl5"
                android:layout_below="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="5dp">

                <Button
                    android:textColor="@color/white"
                    android:background="@drawable/buttonback"
                    android:layout_weight="50"
                    android:text="Special clauses"
                    android:id="@+id/special_clauses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/white"
                    android:background="@drawable/buttonback"
                    android:layout_weight="50"
                    android:text="Go to Activate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnactivate" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>