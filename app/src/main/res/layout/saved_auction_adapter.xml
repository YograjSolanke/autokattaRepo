<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RL2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_marginTop="2dp"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/auctiontitle2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Auction Title"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/typeofauction2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/auctiontitle2"
                    android:enabled="false"
                    android:hint="Auction Title"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1">

                <TextView
                    android:id="@+id/noofvehicle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="No.of vehicle"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editvehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/noofvehicle"
                    android:enabled="false"
                    android:hint="No of vehicle"
                    android:textColor="#808080"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2">

                <TextView
                    android:id="@+id/start2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:text="Start:"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/amp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/datetime3"
                    android:text="&amp;"
                    android:textColor="#808080" />

                <EditText
                    android:id="@+id/datetime3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/start2"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:hint="Date"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/amp"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:hint="Time"
                    android:textColor="#808080"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl3">

                <TextView
                    android:id="@+id/end2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:text="End:"
                    android:textColor="#808080"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/amp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/datetime2"
                    android:text="&amp;" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/amp1"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:hint="Time"
                    android:textColor="#808080"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/datetime2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/end2"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:hint="Date"
                    android:textColor="#808080"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rl_auction_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl4"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/Txt_auction_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auction Category :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/auction_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/Txt_auction_category"
                    android:hint="category"
                    android:textColor="#808080" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rl_stockLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Rl_auction_category"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/Txt_stockLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/stockLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/Txt_stockLocation"
                    android:hint="location"
                    android:textColor="#808080" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/Rl_stockLocation"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp"
                android:weightSum="100">

                <Button
                    android:id="@+id/special_clauses"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:background="@drawable/buttonback"
                    android:text="Special clauses"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnactivate"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="50"
                    android:background="@drawable/buttonback"
                    android:text="Go to Activate"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>