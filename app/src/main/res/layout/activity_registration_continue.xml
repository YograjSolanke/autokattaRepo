<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnSub">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/hint_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/layout_top">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="bottom|start"
                    android:layout_marginEnd="@dimen/layout_top"
                    android:background="@mipmap/ic_circle_red"
                    android:gravity="center"
                    android:padding="2sp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="bottom|start"
                    android:layout_marginEnd="@dimen/layout_top"
                    android:layout_toEndOf="@+id/textView1"
                    android:background="@drawable/ic_circular_shape_silhouette"
                    android:gravity="center"
                    android:padding="2sp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_gravity="bottom|start"
                    android:layout_marginEnd="@dimen/layout_top"
                    android:layout_toEndOf="@+id/textView2"
                    android:background="@drawable/ic_circular_shape_silhouette"
                    android:gravity="center"
                    android:padding="2sp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/coordinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hint_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/detail_backdrop_height"
                    android:background="@drawable/profile"
                    android:contentDescription="@string/app_name"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:clickable="true"
                    android:src="@android:drawable/ic_menu_camera"
                    app:layout_anchor="@id/user_image"
                    app:layout_anchorGravity="bottom|end" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#cccccc"
                    app:layout_anchor="@id/user_image"
                    app:layout_anchorGravity="bottom|end" />

            </android.support.design.widget.CoordinatorLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinate"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/about_us"
                        android:layout_width="fill_parent"
                        android:layout_height="100dip"
                        android:hint="About Us"
                        android:maxLength="200"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textColor="#2C3343"
                        android:textColorHint="#848484" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/website"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="Website"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="#2C3343"
                        android:textColorHint="#848484" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:selectAllOnFocus="true"
        android:text="Submit"
        android:textColor="@color/white" />

</RelativeLayout>