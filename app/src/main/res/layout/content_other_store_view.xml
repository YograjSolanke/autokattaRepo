<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="autokatta.com.view.StoreViewActivity"
    tools:showIn="@layout/activity_other_store_view">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/other_store_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/other_store_image"
                android:orientation="horizontal"
                android:padding="@dimen/card_margin">

                <ImageView
                    android:id="@+id/other_store_images"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/store"
                    android:background="@drawable/frame" />

                <RatingBar
                    android:id="@+id/store_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:stepSize="1"
                    android:layout_below="@+id/other_store_images"
                    android:theme="@style/RatingBar" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_half_margin"
                    android:layout_toEndOf="@+id/other_store_images"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/store_name"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/web"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/inset"
                        android:layout_below="@+id/store_name"
                        android:text="@string/website"
                        android:textColor="@color/background" />


                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:layout_below="@+id/web" />


                    <TextView
                        android:id="@+id/storeType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/store_type"
                        android:layout_below="@+id/location" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/inset"
                        android:orientation="horizontal"
                        android:layout_below="@+id/storeType"
                        android:layout_toStartOf="@+id/call">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/likes"
                            android:id="@+id/likeCount" />

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginStart="@dimen/indicator_size"-->
                        <!--android:text="@string/share" />-->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/indicator_size"
                            android:text="@string/follow"
                            android:id="@+id/followCount" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/new_call"
                        android:contentDescription="@string/app_name"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
