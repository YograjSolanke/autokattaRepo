<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/card_margin"
    android:paddingStart="@dimen/card_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/hdlogo" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/product_image"
            android:text="product name"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_category"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_image"
            android:text="Category :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/card_margin"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_view" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/text_about"
            android:layout_below="@+id/imageView"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_category_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_category"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_category"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_type"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_category"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_image"
            android:text="Type :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_type"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_type"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_type"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_image"
            android:text="Price :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/product_price_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/product_price"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_price"
            android:text="@string/app_name"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#cccccc" />

</LinearLayout>