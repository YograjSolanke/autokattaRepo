<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:id="@+id/relativelayoutmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#C8C9CC"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/auctiontitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Loan Title :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/auctiontitle2"
                        android:enabled="false"
                        android:hint="-"
                        android:textColor="#808080" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/loanmelaimg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_above="@+id/rl4"
                    android:layout_below="@+id/rl1"
                    android:contentDescription="@string/app_name" />


                <RelativeLayout
                    android:id="@+id/relativelocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl1"
                    android:layout_toEndOf="@+id/loanmelaimg">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Location :" />

                    <TextView
                        android:id="@+id/setlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/location"
                        android:text="Set Location :" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelocation"
                    android:layout_toEndOf="@+id/loanmelaimg">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Address :" />

                    <TextView
                        android:id="@+id/setaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/address"
                        android:text="Set Address :" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeaddress"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/start2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:text="Start :"
                        android:textColor="#808080"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/datetime1"
                        android:text="&amp;"
                        android:textColor="#808080" />

                    <TextView

                        android:id="@+id/editTime"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="57dp"
                        android:layout_toEndOf="@+id/datetime1"
                        android:enabled="false"
                        android:hint="Time"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/datetime1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@+id/start2"
                        android:enabled="false"
                        android:hint="Date"
                        android:textColor="#808080" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl4"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/end2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:text="End :"
                        android:textColor="#808080"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/datetime2"
                        android:text="&amp;"
                        android:textColor="#808080" />

                    <TextView

                        android:id="@+id/editText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="57dp"
                        android:layout_toEndOf="@+id/datetime2"
                        android:enabled="false"
                        android:hint="Time"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/datetime2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="50dp"
                        android:layout_toEndOf="@+id/end2"
                        android:enabled="false"
                        android:hint="Date"
                        android:textColor="#808080" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayoutmain"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/relatebutton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#80bebebe"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="Preview"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/relativeshare"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/share1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/buttonback"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/autoshare"
                            android:text="Share"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textshare"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/share1"
                            android:background="@drawable/buttonback"
                            android:gravity="center"
                            android:text="SHARE"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</RelativeLayout>