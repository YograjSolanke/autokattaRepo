<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo48x48" />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/product_icon"
            android:text="@string/vehicle_title"
            android:textColor="@color/text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/product_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/category"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_icon"
            android:text="@string/category"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/category"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/category"
            android:layout_toStartOf="@+id/count"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/product_icon"
            android:text="@string/type"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/type"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/type"
            android:text="@string/app_name"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rl"
        android:background="@color/grey" />
</RelativeLayout>