<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:id="@+id/storeprofileimage"
                android:background="@drawable/profile"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storename"
                android:textColor="#808080"
                android:text="Store Name"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storelocation"
                android:textColor="#808080"
                android:layout_below="@+id/storename"
                android:text="Location"
                android:layout_toRightOf="@+id/storeprofileimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textColor="#808080"
                android:id="@+id/storewebsite"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_below="@+id/storelocation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storetiming"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_toLeftOf="@+id/call_image"
                android:layout_below="@+id/storewebsite"
                android:text="Timing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working days"
                android:textColor="#808080"
                android:id="@+id/storeworkingdays"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_toLeftOf="@+id/call_image"
                android:layout_below="@+id/storetiming" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/call_image"
                android:textColor="#808080"
                android:layout_below="@+id/storeworkingdays"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/call_icon" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/callText"
                android:textColor="#808080"
                android:layout_below="@+id/storeworkingdays"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/store_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/call_image"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_marginTop="5dp"
                android:theme="@style/RatingBar" />


            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actionlinear"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/store_rating">


                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Share"-->
                <!--android:id="@+id/share"-->
                <!--android:gravity="center"-->
                <!--android:textColor="#808080"-->
                <!--android:layout_centerVertical="true"-->

                <!--android:layout_toRightOf="@+id/like"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Like"
                    android:textColor="#808080"
                    android:id="@+id/like"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"

                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toLeftOf="@+id/share"-->
                <!--android:text="Unlike"-->
                <!--android:textColor="#808080"-->
                <!--android:id="@+id/unlike"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:gravity="center"-->
                <!--android:visibility="gone"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="10dp"/>-->

                <TextView
                    android:layout_toRightOf="@+id/like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:text="Follow"
                    android:id="@+id/follow"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_toLeftOf="@+id/like"-->
                <!--android:text="Unfollow"-->
                <!--android:textColor="#808080"-->
                <!--android:id="@+id/unfollow"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:gravity="center"-->
                <!--android:visibility="gone"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="10dp"/>-->


            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="#2C3343"
                android:gravity="center"
                android:layout_below="@+id/actionlinear"
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:id="@+id/details"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>

            <View
                android:background="#cccccc"
                android:id="@+id/view"
                android:layout_below="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <LinearLayout

                android:orientation="horizontal"

                android:layout_below="@+id/view"
                android:id="@+id/relalike2"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <LinearLayout
                    android:gravity="center"

                    android:layout_weight="1"
                    android:id="@+id/linearlike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/likeicon"
                        android:id="@+id/likeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/liketxt"
                        android:text="Like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearunlike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/unlikethumb"
                        android:id="@+id/unlikeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textColor="@color/red"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/unliketxt"
                        android:text="Unlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"

                    android:layout_weight="1"
                    android:id="@+id/linearshare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@mipmap/ic_share"
                        android:id="@+id/shareimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sharetxt"
                        android:text="Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"

                    android:layout_weight="1"
                    android:id="@+id/linearshare1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/autoshare"
                        android:id="@+id/shareimg1"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sharetxt1"
                        android:text="Share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"

                    android:layout_weight="1"
                    android:id="@+id/linearfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/followicon"
                        android:id="@+id/followimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/followtxt"
                        android:text="Follow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:id="@+id/linearunfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/followicon"
                        android:id="@+id/unfollowimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textColor="@color/red"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/unfollowtxt"
                        android:text="Unfollow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>