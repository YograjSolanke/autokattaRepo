<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <TableRow
        android:id="@+id/tablerow1"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2C3343">

            <TextView
                android:id="@+id/text_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Add Owned Vehicle Details"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp"/>

        </RelativeLayout>
    </TableRow>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tablerow1">

        <RelativeLayout

            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RelativeLayout
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/addvehicledetails"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#2C3343"
                    android:gravity="center"
                    android:text="Add Vehicle details"
                    android:textColor="@color/white"
                    android:visibility="gone"/>


                <EditText
                    android:id="@+id/editvehicleno"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/addvehicledetails"
                    android:layout_marginTop="10dip"
                    android:background="#80bebebe"
                    android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM- "
                    android:ems="10"
                    android:hint="@string/vehicle_no"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="#2C3343"/>

                <Spinner
                    android:id="@+id/spinner_vehi_type"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/editvehicleno"
                    android:layout_marginTop="10dip"
                    android:background="#80bebebe"
                    android:textAlignment="center"/>


                <Spinner
                    android:id="@+id/spinner_sub_Type"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_vehi_type"
                    android:layout_marginTop="10dip"
                    android:background="#80bebebe"
                    android:textAlignment="center"/>


                <Spinner
                    android:id="@+id/spinner_brand"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/spinner_sub_Type"
                    android:layout_marginTop="10dip"
                    android:background="#80bebebe"
                    android:textAlignment="center">

                </Spinner>


                <Spinner
                    android:id="@+id/spinner_model"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_brand"
                    android:layout_marginTop="10dip"
                    android:background="#80bebebe"
                    android:textAlignment="center">

                </Spinner>


                <Spinner
                    android:id="@+id/spinner_version"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/spinner_model"
                    android:layout_marginTop="10dip"
                    android:background="#80bebebe"
                    android:textAlignment="center">

                </Spinner>


                <EditText
                    android:id="@+id/edityear"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/spinner_version"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/purchase_date"
                    android:textAlignment="center"

                    android:textColor="#2C3343"
                    android:visibility="visible"/>


                <EditText
                    android:id="@+id/edittaxval"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/edityear"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/tax_validity"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>


                <EditText
                    android:id="@+id/editfitval"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/edittaxval"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/fitness_validity"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>

                <EditText
                    android:id="@+id/editpermitval"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/editfitval"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/permit_validity"
                    android:paddingLeft="10dip"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>


                <EditText
                    android:id="@+id/editinsurance"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/editpermitval"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/insurance_date"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>


                <EditText
                    android:id="@+id/editpuc"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/editinsurance"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/puc"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>


                <EditText
                    android:id="@+id/editlastservice"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/editpuc"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"
                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/last_service_date"
                    android:paddingLeft="10dip"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>


                <EditText
                    android:id="@+id/editestnextsrv"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_below="@+id/editlastservice"
                    android:layout_marginTop="10dip"
                    android:layout_weight="1"


                    android:background="#80bebebe"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/next_service_date"
                    android:textAlignment="center"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484"
                    android:visibility="visible"/>

            </RelativeLayout>

            <LinearLayout

                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r3"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <Button
                        android:id="@+id/btnSub"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@color/background"
                        android:selectAllOnFocus="true"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="16dp"/>


                    <Button
                        android:id="@+id/btnCancle"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/background"
                        android:selectAllOnFocus="true"
                        android:text="Cancel"
                        android:textColor="@color/white"
                        android:textSize="16dp"/>

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>