<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="5dip">

            <Button
                android:id="@+id/btn_save_image"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dip"
                android:background="@drawable/save"
                android:textSize="14sp" />

            <Button
                android:id="@+id/colorpicker"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignTop="@+id/btn_save_image"
                android:layout_marginEnd="10dip"
                android:layout_toStartOf="@+id/btn_save_image"
                android:background="@drawable/colour" />

            <TextView
                android:id="@+id/storetitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/colorpicker"
                android:layout_alignBottom="@+id/colorpicker"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:text="Image Editor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#2C3343"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_clr_all"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_alignTop="@+id/colorpicker"
                android:layout_marginEnd="10dip"
                android:layout_toStartOf="@+id/colorpicker"
                android:background="@drawable/clearall"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ttx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableRow1"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo48x48" />

</RelativeLayout>