<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">


        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:id="@+id/storeprofileimage"
                android:background="@drawable/store"
                android:layout_marginLeft="2dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:id="@+id/storename"
                android:textColor="#808080"
                android:text="Store Name"
                android:layout_toLeftOf="@+id/call_image"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:id="@+id/storelocation"
                android:textColor="#808080"
                android:layout_below="@+id/storename"
                android:text="Location"
                android:layout_toLeftOf="@+id/call_image"
                android:layout_toRightOf="@+id/storeprofileimage" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Website"
                android:textColor="#808080"
                android:id="@+id/storewebsite"
                android:layout_toLeftOf="@+id/call_image"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_below="@+id/storelocation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/storetiming"
                android:textColor="#808080"
                android:visibility="gone"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_toLeftOf="@+id/call_image"
                android:layout_below="@+id/storewebsite"
                android:text="Timing" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:text="Working days"
                android:textColor="#808080"
                android:id="@+id/storeworkingdays"
                android:layout_toRightOf="@+id/storeprofileimage"
                android:layout_below="@+id/storetiming" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/call_image"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/storerating"
                android:src="@drawable/call_icon" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:numStars="5"
                android:id="@+id/storerating"
                android:stepSize="0.5"
                android:layout_below="@+id/storeworkingdays"
                android:layout_alignParentRight="true"
                style="@style/foodRatingBar" />

