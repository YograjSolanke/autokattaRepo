            </RelativeLayout>

            <RelativeLayout

                android:layout_marginBottom="5dp"
                android:gravity="center"

                android:layout_below="@+id/actionlinear"
                android:id="@+id/rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="16sp"
                    android:text="Details"
                    android:id="@+id/details"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/buttonback"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>


            <View

                android:layout_below="@+id/rel"

                android:background="#cccccc"
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>


            <LinearLayout
                android:layout_below="@+id/view"

                android:orientation="horizontal"

                android:id="@+id/relalike2"
                android:layout_width="match_parent"
                android:layout_height="35dp">


                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content">


                    <RelativeLayout

                        android:gravity="center"
                        android:layout_marginTop="5dp"

                        android:layout_weight="1"
                        android:id="@+id/linearlike"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/likeicon"
                            android:id="@+id/likeimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView

                            android:layout_toRightOf="@id/likeimg"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/liketxt"
                            android:text="Like"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/linearunlike"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/unlikethumb"
                            android:id="@+id/unlikeimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_toRightOf="@+id/unlikeimg"
                            android:textColor="@color/red"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/unliketxt"
                            android:text="Unlike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_gravity="center"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>

                <LinearLayout

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearshare"
                    android:layout_width="120dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@mipmap/ic_share"
                        android:id="@+id/shareimg"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sharetxt"
                        android:text="Share"
                        android:visibility="gone"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>

                <LinearLayout

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearshare1"
                    android:layout_width="120dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/autoshare"
                        android:id="@+id/shareimg1"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sharetxt1"
                        android:text="Share"
                        android:visibility="gone"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>

                <RelativeLayout

                    android:id="@+id/relative1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:id="@+id/linearfollow"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/followicon"
                            android:id="@+id/followimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_toRightOf="@+id/followimg"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/followtxt"
                            android:text="Follow"
                            android:textColor="#808080"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:id="@+id/linearunfollow"
                        android:layout_width="100dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@drawable/followicon"
                            android:id="@+id/unfollowimg"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_toRightOf="@+id/unfollowimg"
                            android:textColor="@color/red"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/unfollowtxt"
                            android:text="Unfollow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>