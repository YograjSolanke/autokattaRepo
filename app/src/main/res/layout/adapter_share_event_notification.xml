<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">


    <RelativeLayout
        android:id="@+id/relativelayoutmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/dialog_holo_light_frame">

        <RelativeLayout
            android:id="@+id/auctioneerRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/createdtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/create_by"
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ownertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/createdtext"
                android:enabled="false"
                android:text="@string/owner"
                android:textColor="#808080" />
        </RelativeLayout>

        <View
            android:id="@+id/viewrelative"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/auctioneerRelative"
            android:layout_marginTop="3dp"
            android:background="#cccccc">

        </View>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewrelative">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:visibility="visible" />


            <TextView
                android:id="@+id/titletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image"
                android:text="@string/title"
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edittitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/titletext"
                android:layout_toStartOf="@+id/stamp"
                android:enabled="false"
                android:text="@string/title"
                android:textColor="#808080" />

            <TextView
                android:id="@+id/locationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittitle"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image"
                android:text="@string/location"
                android:textColor="#808080"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/editlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edittitle"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/locationtext"
                android:enabled="false"
                android:text="@string/location"
                android:textColor="#808080" />


            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/start"
                    android:text="@string/date"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/and"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/start_date"
                    android:text="&amp;"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/and"
                    android:text="@string/time"
                    android:textColor="#808080" />


                <TextView
                    android:id="@+id/end2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_date"
                    android:layout_marginTop="3dp"
                    android:text="@string/end"
                    android:textColor="#808080"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/datetime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/start_date"
                    android:layout_below="@+id/start_date"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/end2"
                    android:text="@string/date"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/and2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_date"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/datetime2"
                    android:text="&amp;"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_date"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/and2"
                    android:text="@string/time"
                    android:textColor="#808080" />


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnrelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/dialog_holo_light_frame">

            <LinearLayout
                android:id="@+id/relatebutton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="#80bebebe"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/share"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/new_share_white"
                    android:background="@drawable/buttonback"
                    android:text="@string/share"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>