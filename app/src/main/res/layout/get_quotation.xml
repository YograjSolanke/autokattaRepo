<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/get_quotation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/text_margin_top"
    android:layout_marginStart="@dimen/text_margin_top"
    android:layout_marginTop="@dimen/text_margin_top">

    <!--    <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">-->

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_top"
        android:layout_marginStart="@dimen/text_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Quotation For: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="title"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:textColor="#708090" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Reserved Price"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtReservedPrice"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="Optional"
                android:inputType="numberDecimal"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:textColor="#708090" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Deadline Date"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtDate"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="@string/date"
                android:inputType="datetime"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:textColor="#708090" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_top"
                android:layout_weight="1"
                android:background="@drawable/buttonback"
                android:padding="5dp"
                android:text="Send Enquiry"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
    <!--</android.support.v4.widget.NestedScrollView>-->

</RelativeLayout>
