                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="65dp"
                        android:layout_height="80dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/test_drive" />

                    <!--<TextView
                        android:id="@+id/textView2"
