        <TextView
            android:id="@+id/txtbustype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80bebebe"
            android:gravity="start"
            android:text="@string/bus_type" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llinvoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtinvoice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/invoice_available"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtinvoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80bebebe"
            android:gravity="start"
            android:text="@string/invoice_available" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llappl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtappl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/application"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtappl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80bebebe"
            android:gravity="start"
            android:text="@string/application" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llimpl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtimpl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/implementation"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtimpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80bebebe"
            android:gravity="start"
            android:text="@string/implementation" />
    </LinearLayout>


</LinearLayout>