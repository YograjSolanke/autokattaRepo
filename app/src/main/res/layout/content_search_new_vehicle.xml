<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="autokatta.com.view.SearchNewVehicleActivity"
    tools:showIn="@layout/activity_search_new_vehicle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">


        <RelativeLayout
            android:id="@+id/rowCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/category"
                android:textColor="#2C3343"
                android:textSize="15sp" />

            <!--<Spinner
                android:id="@+id/allCategory1"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#80bebebe" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="@dimen/card_margin"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin">

                <Spinner
                    android:id="@+id/allCategory1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_down" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rowSubcat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowCategory"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/messageText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/sub_category"
                android:textColor="#2C3343"
                android:textSize="15sp" />

            <!--<Spinner
                android:id="@+id/subCategory"
                android:layout_width="200dip"
                android:layout_height="40dip"
                android:layout_alignParentEnd="true"
                android:background="#80bebebe" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="@dimen/card_margin"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin">

                <Spinner
                    android:id="@+id/subCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_down" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rowBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowSubcat"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/brandtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/brand"
                android:textColor="#2C3343"
                android:textSize="15sp" />

            <!--<Spinner
                android:id="@+id/BrandEdit1"
                android:layout_width="200dp"
                android:layout_height="40dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#80bebebe"
                android:ems="10" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="@dimen/card_margin"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin">

                <Spinner
                    android:id="@+id/BrandEdit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_down" />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rowModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowBrand"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/modeltxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/model"
                android:textColor="#2C3343"
                android:textSize="15sp" />

            <!--<Spinner
                android:id="@+id/ModelEdit1"
                android:layout_width="200dp"
                android:layout_height="40dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="#80bebebe"
                android:ems="10" />-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spinner_height"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="@dimen/card_margin"
                android:background="@drawable/spinner_background"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin">

                <Spinner
                    android:id="@+id/ModelEdit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:spinnerMode="dropdown"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@mipmap/ic_down" />

            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rowModel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonback"
            android:layout_marginTop="15dp"
            android:text="Search"
            android:textColor="@color/white"
            android:textAllCaps="false" />

    </RelativeLayout>

</RelativeLayout>
