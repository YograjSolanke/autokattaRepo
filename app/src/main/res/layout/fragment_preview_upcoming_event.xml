<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!--<android.support.v4.view.ViewPager
        android:id="@+id/user_profile_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
-->

    <ListView
        android:id="@+id/preview_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    <!--<android.support.design.widget.TabLayout
        android:id="@+id/user_profile_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom"
        app:tabGravity="fill"
        app:tabIndicatorColor="#C8C9CC"
        app:tabMode="scrollable"
        app:tabTextColor="#ffffff" />
-->
    <LinearLayout
        android:id="@+id/btnlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        android:weightSum="3"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="bottom">

        <Button
            android:id="@+id/btnignore"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ignore"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btngoing"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:text="Going"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnshare"
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!--<ImageView
                android:id="@+id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:contentDescription="@string/app_name"/>-->

            <!-- <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:layout_collapseMode="parallax"
                 android:fitsSystemWindows="true"
                 android:orientation="vertical">-->

            <android.support.v7.widget.CardView
                android:id="@+id/auction_card_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:fitsSystemWindows="true"
                app:cardBackgroundColor="@color/colorPrimary"
                app:layout_collapseMode="parallax">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/auctioneer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_small"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/auctioneer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auctioneer:- "
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/auctioneer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auctioneer"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!--<View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/auctioneer_layout"
                        android:layout_marginTop="3dp"
                        android:background="#cccccc" />-->

                    <LinearLayout
                        android:id="@+id/auctioneer_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/auctioneer_layout"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/profilenamerel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Auction Title :"
                                android:textColor="#808080"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/auctioneer_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/title"
                                android:hint="name"
                                android:textColor="#808080" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/profilenamerel1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/vehicle"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="No Of Vehicle :"
                                android:textColor="#808080"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/auctioneer_no_of_vehicles"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/vehicle"
                                android:hint="name"
                                android:textColor="#808080" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/profilenamerel2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp">

                            <TextView
                                android:id="@+id/type"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Auction Type :"
                                android:textColor="#808080"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/auctioneer_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/type"
                                android:hint="name"
                                android:textColor="#808080" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/profilenamerel3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp">

                            <Button
                                android:id="@+id/btnspecial_clauses"
                                android:layout_width="120dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@color/colorPrimary"
                                android:text="Special Clauses"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/btnspecial_clauses">

                                <TextView
                                    android:id="@+id/closeopentxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Closed type auction"
                                    android:textColor="@color/red" />

                                <TextView
                                    android:id="@+id/timer"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_below="@+id/closeopentxt"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="Timer"
                                    android:textColor="@color/red"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:visibility="visible" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <!--<View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:background="#cccccc" />-->

                        <RelativeLayout
                            android:id="@+id/rl3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start:"
                                android:textColor="#808080"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/start_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="10dp"
                                android:layout_toEndOf="@+id/start"
                                android:text="Date"
                                android:textColor="#808080" />

                            <TextView
                                android:id="@+id/and"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/start_date"
                                android:text="&amp;"
                                android:textColor="#808080" />

                            <TextView
                                android:id="@+id/start_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_toEndOf="@+id/and"
                                android:text="Time"
                                android:textColor="#808080" />

                            <TextView
                                android:id="@+id/end2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/start_date"
                                android:layout_marginTop="3dp"
                                android:text="End:"
                                android:textColor="#808080"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/end_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/start_date"
                                android:layout_below="@+id/start_date"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@+id/end2"
                                android:text="Date"
                                android:textColor="#808080" />

                            <TextView
                                android:id="@+id/and2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/start_date"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@+id/end_date"
                                android:text="&amp;"
                                android:textColor="#808080" />

                            <TextView
                                android:id="@+id/end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/start_date"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_toEndOf="@+id/and2"
                                android:text="Time"
                                android:textColor="#808080" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!-- </RelativeLayout>-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>