<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/adapter_autokatta_contactCard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profileImg"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/profileImg"
                android:text="@string/names"
                android:layout_toStartOf="@+id/callImg"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtnumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtname"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/profileImg"
                android:text="@string/number"
                android:textColor="#2C3343"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!--       <ImageView
                       android:id="@+id/loc"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:contentDescription="@string/app_name"
                       android:layout_toStartOf="@+id/txtcity"
                       android:layout_below="@id/txtname"
                       android:layout_toEndOf="@id/profileImg"/>-->

            <TextView
                android:id="@+id/txtcity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtname"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/profileImg"
                android:layout_toStartOf="@+id/btnsendmsg"
                android:text="@string/company_name"
                android:textColor="#2C3343"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <TextView
                android:id="@+id/txtcompany"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtstatus"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/profileImg"
                android:layout_toStartOf="@+id/btnsendmsg"
                android:text="@string/city"
                android:textColor="#2C3343"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtcity"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/profileImg"
                android:layout_toStartOf="@+id/callImg"
                android:text="@string/selectStatus"
                android:textColor="#2C3343"
                android:textSize="15sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/callImg"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="90dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@mipmap/new_call"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnfollow"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/buttonback"
                android:gravity="center"
                android:text="Follow+"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnunfollow"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/buttonback"
                android:gravity="center"
                android:text="@string/unfollow"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnsendmsg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/buttonback"
                android:gravity="center"
                android:text="Message"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnGroups"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/txtstatus"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/profileImg"
                android:background="@drawable/buttonback"
                android:gravity="center"
                android:padding="5dp"
                android:text="Common Groups"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--<View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
