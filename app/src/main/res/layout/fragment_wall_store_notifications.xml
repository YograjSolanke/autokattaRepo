<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/store_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/text_margin_top"
        android:layout_marginTop="@dimen/text_margin_top"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#66ffffff">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/store_pic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/profile" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relAction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/relImg"
                    android:layout_toStartOf="@+id/fav_layout">

                    <TextView
                        android:id="@+id/store_action_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        android:text="Store Actions"
                        android:textColor="#2C3343" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relActionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relAction"
                    android:layout_toEndOf="@+id/relImg"
                    android:layout_toStartOf="@+id/fav_layout">

                    <TextView
                        android:id="@+id/store_action_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:text="Time"
                        android:textColor="#2C3343" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/fav_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <ImageButton
                        android:id="@+id/store_favourite"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/layout_top"
                        android:contentDescription="@string/app_name"
                        android:visibility="gone"
                        android:src="@mipmap/heart_liked" />

                    <ImageButton
                        android:id="@+id/store_unfavourite"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/layout_top"
                        android:contentDescription="@string/app_name"
                        android:visibility="visible"
                        android:src="@mipmap/ic_heart_like" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fav_layout">

                    <RatingBar
                        android:id="@+id/store_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:numStars="5"
                        android:stepSize="1.0"
                        android:theme="@style/RatingBar" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative"
                android:layout_marginTop="5dp"
                android:background="#cccccc" />

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"
                android:layout_below="@+id/view1"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                tools:src="@mipmap/demo" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_title_height"
                android:layout_alignBottom="@+id/store_image"
                android:layout_marginStart="@dimen/fab_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"
                android:textStyle="italic"
                tools:text="Store Name" />

            <LinearLayout
                android:id="@+id/linear_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/store_name"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/storecategoryrel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/categorytxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/store_category"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/categorytxt"
                        android:hint="category"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storeworkrel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storelocationtxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/store_type"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storelocationtxt"
                        android:hint="type"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storewebsiterel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storewebsitetxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/website"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storewebsitetxt"
                        android:hint="@string/website"
                        android:textColor="#808080" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/storetimerel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/timing"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/time"
                        android:hint="@string/timing"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storeworkingdayrel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/workingDay"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/working_day"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_working_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/workingDay"
                        android:hint="@string/working_day"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storelocationrel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storetypetxt"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/store_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storetypetxt"
                        android:hint="@string/location"
                        android:textColor="#808080" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linear_card"
                android:layout_marginTop="5dp"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_card"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/followcnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/dot2"
                    android:gravity="center"
                    android:text="@string/follower"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/likes"
                    android:text="."
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/likes"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/dot"
                    android:text="@string/share"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/share"
                    android:text="."
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view3">

                <ImageButton
                    android:id="@+id/share_autokatta"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/cards_button_width"
                    android:layout_height="@dimen/cards_button_height"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/autoshare" />

            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/re"
                android:background="#cccccc" />

            <RelativeLayout
                android:id="@+id/rlLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/view3"
                android:layout_toStartOf="@id/rlShare">

                <!--<LinearLayout
                    android:id="@+id/llCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <ImageButton
                        android:id="@+id/call"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/cards_button_height"
                        android:layout_marginEnd="@dimen/layout_top"
                        android:contentDescription="@string/app_name"
                        android:tint="@color/button_grey"
                        app:srcCompat="@android:drawable/ic_menu_call" />
                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/llLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:layout_marginStart="@dimen/card_margin">

                    <ImageButton
                        android:id="@+id/like"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/cards_button_height"
                        android:contentDescription="@string/app_name"
                        android:tint="@color/button_grey"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/ic_thumb_like" />

                    <ImageButton
                        android:id="@+id/unlike"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/cards_button_height"
                        android:contentDescription="@string/app_name"
                        android:tint="@color/button_grey"
                        app:srcCompat="@mipmap/ic_like" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:layout_marginStart="@dimen/card_margin"
                    android:layout_toEndOf="@+id/llLike">

                    <ImageButton
                        android:id="@+id/unfollow_store"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/cards_button_height"
                        android:contentDescription="@string/app_name"
                        android:tint="@color/button_grey"
                        app:srcCompat="@mipmap/ic_comment_account" />

                    <ImageButton
                        android:id="@+id/follow_store"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/cards_button_height"
                        android:contentDescription="@string/app_name"
                        android:tint="@color/button_grey"
                        android:visibility="gone"
                        app:srcCompat="@mipmap/ic_comment_check" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--<View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/store_card_view"
        android:background="@color/grey" />-->
</RelativeLayout>