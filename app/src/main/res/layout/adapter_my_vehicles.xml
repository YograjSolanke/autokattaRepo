<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="6dp"
        card_view:elevation="20dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/vehiimg" />

            <TextView
                android:id="@+id/vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="0dp"
                android:text="Medium Text"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notifymodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_type"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="Model:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_type"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/notifymodel"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifybrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="Brand :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model"
                android:layout_toEndOf="@+id/notifybrand"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifyversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="Version :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:layout_toEndOf="@+id/notifyversion"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifyyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="Year :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:layout_toEndOf="@+id/notifyyear"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifycategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifyyear"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="Sub Category :"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year"
                android:layout_toEndOf="@+id/notifycategory"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcategory"
                android:text="Uploaded Date :"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/uploaddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcategory"
                android:layout_toEndOf="@+id/notifydate"
                android:text="Medium Text"
                android:textColor="#006888"
                android:visibility="visible" />

            <ImageView
                android:contentDescription="@string/app_name"
                android:id="@+id/edtVehicle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>