<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:contentPadding="5dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="28dp"
                android:background="@drawable/vehiimg"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/vehicle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="7dp"
                android:text="Medium Text"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notifymodel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_type"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="@string/model"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_type"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/notifymodel"
                android:layout_marginStart="20dp"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifybrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="@string/brand"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/model"
                android:layout_toEndOf="@+id/notifybrand"
                android:layout_marginStart="35dp"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifyversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="@string/version"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand"
                android:layout_marginStart="25dp"
                android:layout_toEndOf="@+id/notifyversion"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifyyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="@string/years"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/version"
                android:layout_toEndOf="@+id/notifyyear"
                android:layout_marginStart="45dp"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifycategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notifyyear"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="@string/sub_category"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/year"
                android:layout_toEndOf="@+id/notifycategory"
                android:text="Medium Text"
                android:textColor="#006888" />

            <TextView
                android:id="@+id/notifydate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcategory"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/image1"
                android:text="@string/updated_date"
                android:textColor="#000000"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/uploaddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcategory"
                android:layout_toEndOf="@+id/notifydate"
                android:text="Medium Text"
                android:textColor="#006888"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/edtVehicle"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/ic_edit"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--<View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/card_view"
        android:background="@color/grey" />-->
</RelativeLayout>