<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/profile_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pro_pic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/profile" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/relImg">

                    <TextView
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        android:text="Name"
                        android:textColor="#2C3343" />

                    <TextView
                        android:id="@+id/profile_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/profile_name"
                        android:layout_marginStart="7dp"
                        android:text="Time"
                        android:textColor="#2C3343" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative"
                android:layout_marginTop="2dp"
                android:background="#cccccc" />

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_image_height"
                android:layout_below="@+id/view1"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                tools:src="@mipmap/demo" />

            <TextView
                android:id="@+id/profile_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_title_height"
                android:layout_alignBottom="@+id/profile_image"
                android:layout_marginStart="@dimen/fab_margin"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/white"
                android:textStyle="italic"
                tools:text="Title" />

            <LinearLayout
                android:id="@+id/linear_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_title"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/profilenamerel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storenametxt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Name :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storenametxt"
                        android:hint="name"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profileworkrel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storelocationtxt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Worked at : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profileworkat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storelocationtxt"
                        android:hint="work at"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profilewebsiterel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storewebsitetxt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Website : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profilewebsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storewebsitetxt"
                        android:hint="website"
                        android:textColor="#808080" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/profilelocationrel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:id="@+id/storetypetxt"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Location : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/profilelocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/storetypetxt"
                        android:hint="location"
                        android:textColor="#808080" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_card"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/followcnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/dot2"
                    android:gravity="center"
                    android:text="@string/follower"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/likes"
                    android:text="."
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/likes"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/dot"
                    android:text="@string/share"
                    android:textColor="#808080"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/share"
                    android:text="."
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageButton
                android:id="@+id/share_autokatta"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/linear_card"
                android:layout_marginEnd="@dimen/text_margin_top"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/autoshare" />

            <ImageButton
                android:id="@+id/share_other"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_below="@+id/linear_card"
                android:layout_marginEnd="@dimen/text_margin_top"
                android:layout_toStartOf="@id/share_autokatta"
                android:contentDescription="@string/app_name"
                android:tint="@color/button_grey"
                app:srcCompat="@android:drawable/ic_menu_share" />

            <ImageButton
                android:id="@+id/call"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_below="@+id/linear_card"
                android:layout_marginEnd="@dimen/text_margin_top"
                android:layout_toStartOf="@id/share_other"
                android:contentDescription="@string/app_name"
                android:tint="@color/button_grey"
                app:srcCompat="@android:drawable/ic_menu_call" />

            <ImageButton
                android:id="@+id/like"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="@dimen/cards_button_height"
                android:layout_below="@+id/linear_card"
                android:layout_marginEnd="@dimen/text_margin_top"
                android:layout_toStartOf="@id/call"
                android:contentDescription="@string/app_name"
                android:tint="@color/button_grey"
                app:srcCompat="@mipmap/ic_like" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>