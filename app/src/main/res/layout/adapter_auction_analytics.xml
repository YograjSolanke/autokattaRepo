<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/auction_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativemain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#80bebebe">

                <RelativeLayout
                    android:id="@+id/relreach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp">

                    <TextView
                        android:id="@+id/reachedtxt"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Total Reached :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/reached"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/reachedtxt"
                        android:text="reached"
                        android:textColor="#808080" />

                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="#cccccc"
                    android:visibility="invisible">

                </View>

                <RelativeLayout
                    android:id="@+id/relgoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relreach"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/goingcnttxt"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Going :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/goingcnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/goingcnttxt"
                        android:text="going"
                        android:textColor="#808080" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relignore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/view1">

                    <TextView
                        android:id="@+id/ignorecounttxt"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Ignores :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ignore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/ignorecounttxt"
                        android:text="ignore"
                        android:textColor="#808080" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relshare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relignore"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view1">

                    <TextView
                        android:id="@+id/sharecnttxt"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Shares :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/sharecnttxt"
                        android:text="share"
                        android:textColor="#808080" />

                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativetypeuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativemain"
                android:layout_marginStart="2dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/typeusertxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type of user(going)"
                    android:textColor="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relstudentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typeusertxt"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/studcnttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student count : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/studcnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/studcnttxt"
                        android:text="stud cnt"
                        android:textColor="#808080" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relselempcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relstudentcount"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/selfemptxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self employee : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/selfemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/selfemptxt"
                        android:text="selfempcnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relempcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relselempcount"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/emptxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/emp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/emptxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="2dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:background="#cccccc"
                    android:visibility="invisible">

                </View>


                <TextView
                    android:id="@+id/typeuserignoretxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/view"
                    android:text="Type of user(ignore)"
                    android:textColor="#808080"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relstudignorecnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/typeuserignoretxt"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view">

                    <TextView
                        android:id="@+id/studignorecnttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student count : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/studignorecnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/studignorecnttxt"
                        android:text="stud cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relselfempignore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relstudignorecnt"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view">

                    <TextView
                        android:id="@+id/selfempignoretxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self employee : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/selfempignore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/selfempignoretxt"
                        android:text="selfempcnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relselfempignore"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view">

                    <TextView
                        android:id="@+id/empignoretxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/empignore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/empignoretxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeBid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativetypeuser"
                android:background="#80bebebe">

                <RelativeLayout
                    android:id="@+id/reltotalauction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView

                        android:id="@+id/totalAuctiontxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auctioned Vehicles : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalAuction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/totalAuctiontxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relapprove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltotalauction"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/approvetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Approved : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/approvecnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/approvetxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <View
                    android:id="@+id/view11"
                    android:layout_width="2dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:background="#cccccc"
                    android:visibility="invisible">

                </View>

                <RelativeLayout
                    android:id="@+id/relabove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reltotalauction"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view11">

                    <TextView
                        android:id="@+id/abovetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Above Reserved  : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/abovecnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/abovetxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relhiestbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relapprove"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/highesttxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest  : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/highestbidcnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/highesttxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relnobid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relabove"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view11">

                    <TextView
                        android:id="@+id/nobidtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Bid : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nobidcnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/nobidtxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativesuccess"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeBid">

                <RelativeLayout
                    android:id="@+id/relnoofbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/noofbidderstxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Of Bidders: "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/biddercnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/noofbidderstxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <View
                    android:id="@+id/view12"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="#cccccc"
                    android:visibility="invisible">

                </View>

                <RelativeLayout
                    android:id="@+id/relasuccessfulbid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/view12">

                    <TextView
                        android:id="@+id/successfultxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Successfull Bidders : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/successbiddercnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/successfultxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/reltoatlnobid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relnoofbid"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/totalbidtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Bids: "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totalbidcnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/totalbidtxt"
                        android:text="cnt"
                        android:textColor="#808080" />

                </RelativeLayout>


            </RelativeLayout>

            <Button
                android:id="@+id/live"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/relativesuccess"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonback"
                android:text="Go to live"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/auction_card_view"
        android:background="@color/grey" />
</RelativeLayout>