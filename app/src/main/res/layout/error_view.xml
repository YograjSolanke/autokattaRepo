<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/err_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/icon_nointernet"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wifi_off_second"
            android:visibility="gone"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/no_category"
            style="@style/body_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_data"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textColor="@color/mid_gray"
            android:textStyle="bold"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin" />

        <!--<TextView
            android:id="@+id/try_again"
            style="@style/subheading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin"
            android:text="@string/try_again"
            android:textColor="#B2CB39" />-->
    </LinearLayout>
</RelativeLayout>