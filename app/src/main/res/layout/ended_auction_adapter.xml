<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true">

    <android.support.v7.widget.CardView
        android:id="@+id/auction_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout

            android:id="@+id/relativelayoutmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#C8C9CC"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/auctiontitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="Auction Title :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/typeofauction2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/auctiontitle2"
                    android:enabled="false"
                    android:hint="-"
                    android:textColor="#808080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1">

                <TextView
                    android:id="@+id/noofvehicle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="No.of vehicle :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/editvehicle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/noofvehicle"
                    android:enabled="false"
                    android:hint="No of vehicle"
                    android:textColor="#808080" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/start2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:text="Start :"
                    android:textColor="#808080"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/datetime1"
                    android:text="&amp;"
                    android:textColor="#808080" />

                <TextView

                    android:id="@+id/editTime"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="57dp"
                    android:layout_toEndOf="@+id/datetime1"
                    android:enabled="false"
                    android:hint="Time"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/datetime1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="45dp"
                    android:layout_toEndOf="@+id/start2"
                    android:enabled="false"
                    android:hint="Date"
                    android:textColor="#808080" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl4"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/end2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:text="End :"
                    android:textColor="#808080"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="25dp"
                    android:layout_toEndOf="@+id/datetime2"
                    android:text="&amp;"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="57dp"
                    android:layout_toEndOf="@+id/datetime2"
                    android:enabled="false"
                    android:hint="Time"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/datetime2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_toEndOf="@+id/end2"
                    android:enabled="false"
                    android:hint="Date"
                    android:textColor="#808080" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl5"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Timer"
                    android:textColor="@color/red"
                    android:textStyle="bold" />

                <com.github.clans.fab.FloatingActionMenu
                    android:id="@+id/menu_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    app:layout_anchor="@id/appbar"
                    app:layout_anchorGravity="end|top"
                    app:menu_fab_size="mini"
                    fab:menu_labels_singleLine="true"
                    fab:menu_openDirection="down">

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/gotopreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/auction"
                        fab:fab_label="Preview"
                        fab:fab_size="mini" />

                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/btncluse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clauses"
                        fab:fab_label="Clauses"
                        fab:fab_size="mini" />

                </com.github.clans.fab.FloatingActionMenu>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>