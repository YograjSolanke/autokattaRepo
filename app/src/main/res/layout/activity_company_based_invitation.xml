<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/company_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_top"
        android:gravity="center">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="bottom|start"
            android:background="@mipmap/ic_circle_red"
            android:gravity="center"
            android:padding="2sp"
            android:text="1"
            android:layout_marginEnd="@dimen/layout_top"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="bottom|start"
            android:layout_toEndOf="@+id/textView1"
            android:background="@drawable/ic_circular_shape_silhouette"
            android:gravity="center"
            android:padding="2sp"
            android:text="2"
            android:layout_marginEnd="@dimen/layout_top"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_gravity="bottom|start"
            android:layout_toEndOf="@+id/textView2"
            android:background="@drawable/ic_circular_shape_silhouette"
            android:gravity="center"
            android:padding="2sp"
            android:text="3"
            android:layout_marginEnd="@dimen/layout_top"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <TableRow
        android:id="@+id/tablerow1"
        android:layout_width="match_parent"
        android:layout_below="@+id/hint_layout"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2C3343">

            <TextView
                android:id="@+id/text_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Lets Connect - Suggestions based on Company"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>
    </TableRow>
    <!-- Editext for Search -->
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablerow1">

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@color/background"
            android:text="Next"
            android:textColor="@color/white" />

    </RelativeLayout>

    <EditText
        android:id="@+id/inputSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:hint="Search Contacts.."
        android:inputType="textVisiblePassword"
        android:paddingLeft="5dp"
        android:textColor="#2C3343"
        android:textColorHint="#848484" />

    <!-- List View -->


    <ListView
        android:id="@+id/l1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSearch" />


</RelativeLayout>
