<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/get_quotation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/text_margin_top"
                android:layout_marginStart="@dimen/text_margin_top"
                android:layout_marginTop="@dimen/text_margin_top">

    <!--    <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">-->
    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Give Offer"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rr"
        android:layout_marginEnd="@dimen/text_margin_top"
        android:layout_marginStart="@dimen/text_margin_top"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Offer Price"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtofferprice"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="Price"
                android:inputType="number"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:textColor="#708090" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Payment Mode"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/paymentmode"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="Payment Mode"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:textColor="#708090" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Description"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="Description"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin"
                android:textColor="#708090" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/text_margin_top"
                android:layout_weight="1"
                android:background="@drawable/buttonback"
                android:padding="5dp"
                android:text="Send Offer"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
