<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="4dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:id="@+id/reltitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/button_pressed">

            <TextView
                android:id="@+id/group_title_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="Group title"
                android:textColor="#2C3343"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/group_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@mipmap/ic_edit" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/group_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/group_icon"
                android:text="@string/member_count"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edtmember_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/member_count"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/member_count"
                android:layout_toStartOf="@+id/group_delete"
                android:text="@string/app_name"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicle_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/member_count"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/group_icon"
                android:text="@string/vehicle_count"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_vehicle_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/vehicle_count"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/vehicle_count"
                android:text="@string/app_name"
                android:textColor="#2C3343"
                android:layout_toStartOf="@+id/group_delete"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehicle_count"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/group_icon"
                android:text="@string/product_count"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_product_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Product_count"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/Product_count"
                android:text="@string/app_name"
                android:layout_toStartOf="@+id/group_delete"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Service_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Product_count"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/group_icon"
                android:text="@string/service_count"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/edit_service_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Service_count"
                android:layout_marginStart="5dp"
                android:layout_toStartOf="@+id/group_delete"
                android:layout_toEndOf="@+id/Service_count"
                android:text="@string/app_name"
                android:textColor="#2C3343"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/group_delete"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@mipmap/ic_delete" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <!--<View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/card_view"
        android:background="@color/grey" />-->
</RelativeLayout>
