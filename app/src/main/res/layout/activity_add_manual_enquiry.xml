<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_manual"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/text_margin_top"
    android:layout_marginStart="@dimen/text_margin_top"
    android:layout_marginTop="@dimen/text_margin_top">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/text_margin_top"
            android:layout_marginStart="@dimen/text_margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/name"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_weight="1.6"
                    android:background="@color/edit_background"
                    android:hint="@string/name"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_top"
                android:weightSum="4.5">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="@string/contact_no"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtContact"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_weight="1.6"
                    android:background="@color/edit_background"
                    android:ems="10"
                    android:hint="@string/contact_no"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />

                <ImageView
                    android:id="@+id/imgCross"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:src="@android:drawable/ic_delete"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgCheck"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/check"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/go_profile"
                    android:textColor="@color/zxing_custom_possible_result_points"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtInvite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Invite"
                    android:textColor="@color/zxing_custom_possible_result_points"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_top"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/address"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/autoAddress"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_weight="1.6"
                    android:background="@color/edit_background"
                    android:hint="@string/address"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/exchange"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/finance"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_top"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/completeAddress"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtAddress"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight="1.6"
                    android:background="@color/edit_background"
                    android:hint="@string/completeAddress"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_top"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/discussion"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtDiscussion"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edit_height"
                    android:layout_weight="1.5"
                    android:background="@color/edit_background"
                    android:hint="@string/discussion"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/layout_top"
                android:weightSum="3">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/followdate"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtDate"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_weight="1"
                    android:background="@color/edit_background"
                    android:editable="false"
                    android:hint="@string/date"
                    android:inputType="datetime"
                    android:layout_marginEnd="@dimen/layout_top"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />

                <EditText
                    android:id="@+id/edtTime"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/card_title_height"
                    android:layout_weight="1"
                    android:background="@color/edit_background"
                    android:editable="false"
                    android:hint="@string/time"
                    android:inputType="datetime"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin"
                    android:textColor="#708090" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:text="@string/select"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relStatus"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spinner_height"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="@dimen/card_margin"
                    android:layout_weight="1.6"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin">

                    <Spinner
                        android:id="@+id/spnStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/transparent"
                        android:entries="@array/ManualEnquiryStatus"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_down" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.4"
                    android:text="@string/select"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/relInventory"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spinner_height"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="@dimen/card_margin"
                    android:layout_weight="1.6"
                    android:background="@drawable/spinner_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/card_margin"
                    android:paddingStart="@dimen/card_margin">

                    <Spinner
                        android:id="@+id/spnInventory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:background="@android:color/transparent"
                        android:entries="@array/UserInventory"
                        android:gravity="center"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_down" />

                </RelativeLayout>
            </LinearLayout>
            <!-- </LinearLayout>-->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/error_view" />
</RelativeLayout>
