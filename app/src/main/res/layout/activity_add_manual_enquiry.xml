<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/text_margin_top"
    android:layout_marginStart="@dimen/text_margin_top"
    android:layout_marginTop="@dimen/text_margin_top"
    android:background="@drawable/layout_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"
        android:gravity="start|center"
        android:paddingEnd="@dimen/fab_margin"
        android:paddingStart="@dimen/fab_margin"
        android:text="@string/enquiry_form"
        android:textColor="@color/white"
        android:textSize="@dimen/text_layout"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginEnd="@dimen/text_margin_top"
        android:layout_marginStart="@dimen/text_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/first_name"
                android:textStyle="bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.6"
                android:background="@android:color/transparent"
                android:hint="@string/name"
                android:textColor="#708090"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/last_name"
                android:textStyle="bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.6"
                android:background="@android:color/transparent"
                android:hint="@string/surname"
                android:textColor="#708090"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/contact_no"
                android:textStyle="bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.2"
                android:background="@android:color/transparent"
                android:hint="@string/contact_no"
                android:paddingEnd="@dimen/card_margin"
                android:maxLines="1"
                android:textColor="#708090"
                android:inputType="phone"
                android:ems="10"
                android:paddingStart="@dimen/card_margin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/go_profile"
                android:textColor="@color/zxing_custom_possible_result_points"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/address"
                android:textStyle="bold" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.6"
                android:background="@android:color/transparent"
                android:hint="@string/address"
                android:textColor="#708090"
                android:paddingEnd="@dimen/card_margin"
                android:paddingStart="@dimen/card_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/select"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="@dimen/card_title_height"
                android:layout_weight="1.6"
                android:hint="@string/address"
                android:paddingEnd="@dimen/card_margin"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:paddingStart="@dimen/card_margin" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>