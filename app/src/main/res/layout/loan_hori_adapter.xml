<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayoutmain">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/auctioneerRelative"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <TextView
                android:textColor="#808080"
                android:layout_marginTop="5dp"
                android:id="@+id/createdtext"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="Created By: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#808080"
                android:id="@+id/ownertext"
                android:text="owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/createdtext"
                android:enabled="false" />
        </RelativeLayout>

        <View
            android:background="#cccccc"
            android:layout_below="@+id/auctioneerRelative"
            android:id="@+id/viewrelative"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_below="@+id/viewrelative"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/image"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:visibility="visible" />


            <TextView
                android:textColor="#808080"
                android:layout_marginTop="5dp"
                android:id="@+id/titletext"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:text="Title:"
                android:layout_toRightOf="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#808080"
                android:layout_marginLeft="10dp"
                android:id="@+id/edittitle"
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/titletext"
                android:layout_toLeftOf="@+id/stamp"
                android:enabled="false" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/edittitle"
                android:layout_marginLeft="5dp"
                android:textColor="#808080"
                android:textStyle="bold"
                android:text="Location:"
                android:layout_toRightOf="@+id/image"
                android:id="@+id/locationtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/edittitle"
                android:textColor="#808080"
                android:layout_toRightOf="@+id/locationtext"
                android:layout_marginLeft="5dp"
                android:text="Location"
                android:id="@+id/editlocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />


            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_below="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/start"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:text="Start:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#808080"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/start_date"
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/start" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/and"
                    android:textColor="#808080"
                    android:layout_toRightOf="@+id/start_date"
                    android:text="&amp;"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#808080"
                    android:layout_toRightOf="@+id/and"
                    android:text="Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/start_time"
                    android:layout_marginLeft="5dp" />


                <TextView
                    android:id="@+id/end2"
                    android:textStyle="bold"
                    android:textColor="#808080"
                    android:text="End:"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_toRightOf="@+id/end2"
                    android:textColor="#808080"
                    android:id="@+id/datetime2"
                    android:text="Date"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/start_date" />

                <TextView
                    android:textColor="#808080"
                    android:id="@+id/and2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/datetime2"
                    android:text="&amp;"
                    android:layout_below="@+id/start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#808080"
                    android:layout_toRightOf="@+id/and2"
                    android:text="Time"
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/start_date" />


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_below="@+id/rl1"
            android:id="@+id/btnrelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="1"
                android:orientation="horizontal"
                android:background="#80bebebe"
                android:id="@+id/relatebutton"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:layout_marginLeft="1dp"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/going"
                    android:text="Share"
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>