<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/post_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/text_margin_top"
        android:layout_marginTop="@dimen/text_margin_top"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_pro_pic"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="7dp"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/profile" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/relImg">

                    <TextView
                        android:id="@+id/post_action_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="10dp"
                        android:text="Post Actions"
                        android:textColor="#2C3343" />

                    <TextView
                        android:id="@+id/post_action_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/post_action_names"
                        android:layout_marginStart="7dp"
                        android:text="Time"
                        android:textColor="#2C3343" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/relContact"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/search_favourite"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/text_margin_top"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/heart_liked"
                        android:visibility="gone" />

                    <ImageButton
                        android:id="@+id/search_unfavourite"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="@dimen/cards_button_width"
                        android:layout_height="@dimen/card_title_height"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/text_margin_top"
                        android:contentDescription="@string/app_name"
                        android:src="@mipmap/ic_heart_like"
                        android:visibility="visible" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative"
                android:layout_marginTop="5dp"
                android:background="#cccccc" />

            <!--<com.freesoulapps.preview.android.Preview
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:visibility="gone"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />-->

            <TextView
                android:id="@+id/statustxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative"
                android:gravity="center"
                android:maxLength="200"
                android:minHeight="100dp"
                android:text="@string/app_name"
                android:textColor="#808080"
                android:textSize="18sp"
                android:textStyle="italic"
                android:visibility="visible" />
            <!--</RelativeLayout>-->

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/statustxt"
                android:background="#cccccc" />


            <RelativeLayout
                android:id="@+id/rlShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/v2">

                <ImageButton
                    android:id="@+id/share_autokatta"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/cards_button_width"
                    android:layout_height="@dimen/cards_button_height"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:contentDescription="@string/app_name"
                    app:srcCompat="@drawable/autoshare" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@id/rlShare">

                <ImageButton
                    android:id="@+id/call"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/cards_button_width"
                    android:layout_height="@dimen/cards_button_height"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:contentDescription="@string/app_name"
                    android:tint="@color/button_grey"
                    app:srcCompat="@android:drawable/ic_menu_call" />

                <ImageButton
                    android:id="@+id/like"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/cards_button_width"
                    android:layout_height="@dimen/cards_button_height"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:layout_toStartOf="@id/call"
                    android:contentDescription="@string/app_name"
                    android:tint="@color/button_grey"
                    android:visibility="gone"
                    app:srcCompat="@mipmap/ic_thumb_like" />

                <ImageButton
                    android:id="@+id/unlike"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/cards_button_width"
                    android:layout_height="@dimen/cards_button_height"
                    android:layout_marginEnd="@dimen/text_margin_top"
                    android:layout_toStartOf="@id/call"
                    android:contentDescription="@string/app_name"
                    android:tint="@color/button_grey"
                    app:srcCompat="@mipmap/ic_like" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>