<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#C8C9CC">

                <ImageView
                    android:id="@+id/imglike"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/profile" />

                <TextView
                    android:id="@+id/storeaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/relativefev"
                    android:layout_toRightOf="@+id/imglike"
                    android:text="storeaction"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <!--<TextView-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toRightOf="@+id/name"-->
                <!--android:id="@+id/action"-->
                <!--android:text="action"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

                <!--<TextView-->
                <!--android:textStyle="bold"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toRightOf="@+id/action"-->
                <!--android:id="@+id/storenamemain"-->
                <!--android:text="store name"-->
                <!--android:textColor="@color/black"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

                <!--<TextView-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toRightOf="@+id/storenamemain"-->
                <!--android:id="@+id/store"-->
                <!--android:text="store"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

                <TextView
                    android:id="@+id/storetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storeaction"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@+id/relativefev"
                    android:layout_toRightOf="@+id/imglike"
                    android:text="Day at time" />

                <RelativeLayout
                    android:id="@+id/relativefev"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView

                        android:id="@+id/fvrtimg"

                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/vehicletxt"
                        android:background="@drawable/fav1" />

                    <ImageView
                        android:id="@+id/fvrtredimg"

                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/fav2"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relative"
                android:background="#cccccc">

            </View>

            <RelativeLayout
                android:id="@+id/relalike1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/v1"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgnotilike"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"

                    android:background="@drawable/store" />

                <RelativeLayout
                    android:id="@+id/storenamerel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/imgnotilike">

                    <TextView
                        android:id="@+id/storenametxt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Store name : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/storename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/storenametxt"
                        android:hint="name"
                        android:textColor="#808080"
                        android:textColorHint="#848484" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storetyperel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storenamerel"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgnotilike">

                    <TextView
                        android:id="@+id/storetypetxt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Type of store : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/storetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/storetypetxt"
                        android:hint="type"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storelocationrel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storeworkdayrel"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/storelocationtxt"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Location: "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/storelocationtxt"
                        android:hint="location"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storewebsiterel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storetyperel"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgnotilike">

                    <TextView
                        android:id="@+id/storewebsitetxt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Website :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/storewebsitetxt"
                        android:hint="website"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storetimerel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storewebsiterel"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgnotilike">

                    <TextView
                        android:id="@+id/storetimetxt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Timing :"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/timing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/storetimetxt"
                        android:hint="timing"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/storeworkdayrel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storetimerel"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/imgnotilike">

                    <TextView
                        android:id="@+id/storeworkdaytxt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Working day : "
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/workday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/storeworkdaytxt"
                        android:hint="working day"
                        android:textColor="#808080" />

                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storelocationrel"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="35dp">

                    <TextView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Like"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/like"
                        android:text="."
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/dot"
                        android:text="Share"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dot2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/share"
                        android:text="."
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/followcnt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/dot2"
                        android:text="follower"
                        android:textColor="#808080"
                        android:textSize="12sp"

                        />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/callimg"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/storelocationrel"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/call_icon" />

                <ImageView
                    android:id="@+id/starlike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/callimg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/starlike1"
                    android:background="@drawable/ratestar1" />

                <ImageView
                    android:id="@+id/starlike1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/callimg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/starlike2"
                    android:background="@drawable/ratestar1" />

                <ImageView
                    android:id="@+id/starlike2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/callimg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/starlike3"
                    android:background="@drawable/ratestar1" />

                <ImageView
                    android:id="@+id/starlike3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/callimg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/starlike4"
                    android:background="@drawable/ratestar1" />

                <ImageView
                    android:id="@+id/starlike4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/callimg"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ratestar1" />

                <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:background="@drawable/follow"-->
                <!--android:layout_below="@+id/starlike"-->
                <!--android:id="@+id/followimg"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_toLeftOf="@+id/followcnt"/>-->


            </RelativeLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relalike1"
                android:background="#cccccc">

            </View>

            <LinearLayout

                android:id="@+id/relalike2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/v2"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/likeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/likeicon" />

                    <TextView
                        android:id="@+id/liketxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Like"
                        android:textColor="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearunlike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/unlikeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/unlikethumb" />

                    <TextView
                        android:id="@+id/unliketxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Unlike"
                        android:textColor="@color/red" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="#cccccc" />


                <LinearLayout
                    android:id="@+id/linearshare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/shareimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@android:drawable/ic_menu_share" />

                    <TextView
                        android:id="@+id/sharetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Share"
                        android:textColor="#808080" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="#cccccc" />

                <LinearLayout
                    android:id="@+id/linearshare1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/shareimg1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/autoshare" />

                    <TextView
                        android:id="@+id/sharetxt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Share"
                        android:textColor="#808080" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="#cccccc"></View>


                <LinearLayout
                    android:id="@+id/linearfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/followimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/followicon" />

                    <TextView
                        android:id="@+id/followtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Follow"
                        android:textColor="#808080" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearunfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/unfollowimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/followicon" />

                    <TextView
                        android:id="@+id/unfollowtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Unfollow"
                        android:textColor="@color/red" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>