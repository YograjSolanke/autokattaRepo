<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registration_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/article_subheading"
            android:textStyle="bold"
            tools:text="@string/no_register" />

        <ImageView
            android:id="@+id/card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height"
            android:layout_below="@+id/registration_no"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:src="@drawable/hdlogo" />

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height"
            android:layout_alignBottom="@+id/card_image"
            android:layout_marginStart="@dimen/fab_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="Title" />

        <LinearLayout
            android:id="@+id/linear_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/price_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/price" />

                <TextView
                    android:id="@+id/model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/model" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/brand_updated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/brand_no" />

                <TextView
                    android:id="@+id/updated_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/updated_by" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/location_rto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/location" />

                <TextView
                    android:id="@+id/rto_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/rto_city" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/year_of_mfg_kms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/year_of_mfg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/year_of_mfg" />

                <TextView
                    android:id="@+id/kms_hrs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/article_subheading"
                    tools:text="@string/kms_hrs" />
            </LinearLayout>
        </LinearLayout>
        <View

            android:layout_below="@+id/linear_card"

            android:background="#cccccc"
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp">

        </View>
        <LinearLayout
            android:layout_below="@+id/linear_card"
            android:orientation="horizontal"
            android:id="@+id/relalike2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:weightSum="1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/linear_card"
                >

                <RelativeLayout

                    android:gravity="center"
                    android:id="@+id/rellike"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/likeicon"
                        android:id="@+id/likeimg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:layout_alignParentStart="true"/>

                    <TextView

                        android:layout_toRightOf="@id/likeimg"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/liketxt"
                        android:layout_marginTop="8dp"
                        android:text="Like"
                        android:textColor="#808080"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout

                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:id="@+id/relunlike"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:background="@drawable/unlikethumb"
                        android:id="@+id/unlikeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView

                        android:layout_toRightOf="@id/unlikeimg"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/unlike"
                        android:text="Unlike"
                        android:textColor="@color/red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_gravity="center"
                android:background="#cccccc"
                android:layout_width="1dp"
                android:layout_height="20dp"></View>

            <ImageButton
                android:id="@+id/call"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="match_parent"
                android:layout_below="@+id/linear_card"
                android:layout_marginEnd="30dp"
                android:contentDescription="@string/app_name"
                android:tint="@color/button_grey"
                app:srcCompat="@android:drawable/ic_menu_call"/>
            <View
                android:layout_gravity="center"
                android:background="#cccccc"
                android:layout_width="1dp"
                android:layout_height="20dp"></View>




            <ImageButton
                android:id="@+id/share_other"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:tint="@color/button_grey"
                app:srcCompat="@android:drawable/ic_menu_share"/>
            <View
                android:layout_gravity="center"
                android:background="#cccccc"
                android:layout_width="1dp"
                android:layout_height="20dp"></View>

            <ImageButton
                android:id="@+id/share_autokatta"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/cards_button_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/app_name"
                app:srcCompat="@drawable/autoshare"/>

        </LinearLayout>
