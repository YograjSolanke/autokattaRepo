                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearbtns"
                        android:layout_marginTop="10dp"
                        android:background="#80bebebe"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/editwritereview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@+id/btnpost"
                            android:gravity="center"
                            android:hint="Write Review.."
                            android:textColor="#2C3343"
                            android:textColorHint="#848484" />

                        <Button
                            android:id="@+id/btnpost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:text="Post"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearseeall"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_below="@+id/linearwritereview"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnseeall"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/button_background"
                            android:text="See All Reviews"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relativerateproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearcategory"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/linearrateproduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:text="Rate this Product"
                                android:textColor="#2C3343"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/linearprice1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearrateproduct">

                            <TextView
                                android:id="@+id/price1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dip"
                                android:text="Price"
                                android:textColor="#2C3343" />

                            <RatingBar
                                android:id="@+id/pricebar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:stepSize="1.0"
                                android:theme="@style/RatingBar" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/linearquality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearprice1">

                            <TextView
                                android:id="@+id/qualityofproduct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dip"
                                android:text="Quality of Product"
                                android:textColor="#2C3343" />

                            <RatingBar
                                android:id="@+id/qualitybar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:stepSize="1.0"
                                android:theme="@style/RatingBar" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/linearavailability"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearquality">

                            <TextView
                                android:id="@+id/availability"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dip"
                                android:text="Availability of stock"
                                android:textColor="#2C3343" />

                            <RatingBar
                                android:id="@+id/stockbar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:isIndicator="false"
                                android:numStars="5"
                                android:stepSize="1.0"
                                android:theme="@style/RatingBar" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/linearallrating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearavailability"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/allrating"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="5dip"
                                android:layout_marginTop="5dp"
                                android:padding="5dip"
                                android:text="Your overall rating of this product "
                                android:textColor="#2C3343"
                                android:textSize="15sp" />

                            <RatingBar
                                android:id="@+id/overallbar"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/allrating"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:numStars="5"
                                android:stepSize="1.0"
                                android:theme="@style/RatingBar" />

                            <Button
                                android:id="@+id/btnfeedback"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_below="@+id/overallbar"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/buttonback"
                                android:text="Submit Your Feedback"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="15dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
