<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/mainlayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.ProductViewActivity"
    tools:showIn="@layout/activity_product_view">

    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80bebebe"
        android:visibility="visible">

        <TextView
            android:id="@+id/lstorename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Store Name"
            android:textAlignment="center"
            android:textColor="#2C3343"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtstorename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lstorename"
            android:text="Store Name"
            android:layout_toLeftOf="@+id/call"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lstorewebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtstorename"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Website"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtstorewebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lstorewebsite"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:text="website"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/no_of_enquiries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtstorewebsite"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:text="No.Of Enquiries:"
            android:enabled="false"
            android:textColor="@color/textColor"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnchat"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txtstorewebsite"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonback"
            android:text="Send Enquiry"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/call_icon"
            android:visibility="gone" />

        <RatingBar
            android:id="@+id/storerating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/call"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:stepSize="1.0"
            android:theme="@style/RatingBar" />

    </RelativeLayout>

