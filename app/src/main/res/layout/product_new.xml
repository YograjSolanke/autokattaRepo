<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/relativetype"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#C8C9CC">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/producttype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:text="@string/type" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dash1"
                        android:text="-"
                        android:textColor="#808080"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/producttype"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:id="@+id/editproducttype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#808080"
                        android:hint="type"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/dash1"
                        android:layout_marginLeft="10dp" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/profile"
                android:layout_marginTop="10dip"
                android:layout_below="@+id/relativetype"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearstars"
                android:layout_below="@+id/profile"
                android:layout_marginLeft="5dp"
                android:visibility="visible">

