                <!--<ImageView-->
                <!--android:id="@+id/star3p"-->
                <!--android:layout_width="15dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:src="@drawable/starrating"-->

                <!--android:layout_toRightOf="@+id/star2"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginLeft="5dp"/>-->
