                <!--android:layout_height="15dp"-->
                <!--android:src="@drawable/starrating"-->
                <!--android:layout_toRightOf="@+id/star4"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginLeft="5dp"/>-->


                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:numStars="5"
                    android:id="@+id/productrating"
                    android:layout_centerVertical="true"
                    android:stepSize="0.5"
                    style="@style/foodRatingBar" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/deleteproduct"
                android:src="@drawable/ic_delete"
                android:layout_below="@+id/relativetype"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/relativename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/deleteproduct">

                <TextView
                    android:id="@+id/productname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/names" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dash2"
                    android:text="-"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/productname" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:textColor="#808080"
                    android:hint="@string/names"
                    android:id="@+id/edittxt"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dash2"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/relativename">

                <TextView
                    android:id="@+id/productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/price" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dash3"
                    android:text="-"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/productprice"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:textColor="#808080"
                    android:id="@+id/priceedit"
                    android:hint="@string/price"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dash3"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativetags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/linearstars">

                <TextView
                    android:id="@+id/producttags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/tags"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dash4"
                    android:text="-"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/producttags"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/edittags"
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:textColor="#808080"
                    android:hint="@string/tags"
                    android:layout_toRightOf="@+id/dash4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativedetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/relativetags">

                <TextView
                    android:id="@+id/moredetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:text="@string/details" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dash5"
                    android:text="-"
                    android:textColor="#808080"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/moredetails"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/editdetails"
                    android:layout_width="300dp"
                    android:layout_height="20dp"
                    android:textColor="#808080"
                    android:hint="@string/details"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dash5"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnviewdetails"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:text="@string/view_details"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/relativedetails"
                android:layout_centerHorizontal="true"
                android:background="@color/background"
                android:visibility="visible" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
