<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/hdlogo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/service_icon"
            android:text="Vehicle title"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/service_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/category"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_title"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/service_icon"
            android:text="Category :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/category"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/category"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/service_icon"
            android:text="Type :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/type_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/type"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/type"
            android:text="@string/app_name"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/service_icon"
            android:text="Price :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/price"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/price"
            android:text="@string/app_name"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>