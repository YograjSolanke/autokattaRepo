<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TableRow
        android:id="@+id/tablerow1"
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#2C3343">

            <TextView
                android:id="@+id/text_registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Add Profession Details"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </RelativeLayout>
    </TableRow>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tablerow1">

        <RelativeLayout
            android:id="@+id/RelativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/auto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dip">

                <AutoCompleteTextView
                    android:id="@+id/autocompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Company Name"
                    android:paddingLeft="10dp"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/auto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/auto1"
                android:layout_marginTop="10dip">

                <AutoCompleteTextView
                    android:id="@+id/autodesignation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Designation"
                    android:paddingLeft="10dp"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/auto2">

                <MultiAutoCompleteTextView
                    android:id="@+id/autoskills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Add Skills"
                    android:paddingLeft="10dp"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/auto3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/auto">

                <MultiAutoCompleteTextView
                    android:id="@+id/autodeals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Dealing With"
                    android:paddingLeft="10dp"
                    android:textColor="#2C3343"
                    android:textColorHint="#848484" />
            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:id="@+id/relArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/auto3"
                android:layout_marginTop="15dp">

                <Spinner
                    android:id="@+id/spinnerArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:entries="@array/areaOptions"></Spinner>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/mainrelSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relArea"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp">

                <RelativeLayout
                    android:id="@+id/relSpinnerKms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Spinner
                        android:id="@+id/spinnerKms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/kmsOptions"></Spinner>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relSpinnerDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <autokatta.com.Registration.MultiSelectionSpinner
                        android:id="@+id/spinnerDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></autokatta.com.Registration.MultiSelectionSpinner>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relSpinnerState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <autokatta.com.Registration.MultiSelectionSpinner
                        android:id="@+id/spinnerState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>


            <Button
                android:id="@+id/btnnext"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_below="@+id/mainrelSpinner"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:layout_toLeftOf="@+id/btncancel"
                android:layout_toStartOf="@+id/btncancel"
                android:background="@color/background"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btncancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/mainrelSpinner"
                android:layout_centerHorizontal="true"
                android:layout_margin="9dp"
                android:background="@color/background"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>