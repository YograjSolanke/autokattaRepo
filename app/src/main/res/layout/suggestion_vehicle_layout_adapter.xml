<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/product_card_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_top"
        android:layout_marginTop="@dimen/text_margin_top"
        android:foreground="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/vehiclePic"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo48x48" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vehiclePic"
                android:id="@+id/layout1">

                <TextView
                    android:id="@+id/vehicleNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/vehicle_title"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/vehicleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/vehicleNameText"
                    android:text="@string/vehicle_title"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:id="@+id/layout2">

                <TextView
                    android:id="@+id/vehicleCategoryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_margin="5dp"
                    android:text="@string/category"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/vehicleCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_toEndOf="@+id/vehicleCategoryText"
                    android:layout_margin="5dp"
                    android:text="@string/category"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:id="@+id/layout3">

                <TextView
                    android:id="@+id/vehicleBrandText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_margin="5dp"
                    android:text="@string/brand"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/vehicleBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/vehicleBrandText"
                    android:text="@string/brand"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                android:id="@+id/layout4">

                <TextView
                    android:id="@+id/vehicleModelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_margin="5dp"
                    android:text="@string/model"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/vehicleModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_toEndOf="@+id/vehicleModelText"
                    android:layout_margin="5dp"
                    android:text="@string/model"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout4"
                android:id="@+id/layout5">

                <TextView
                    android:id="@+id/vehicleYearText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_margin="5dp"
                    android:text="@string/year_of_mfg"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicleYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/vehicleYearText"
                android:text="@string/year_of_mfg"
                android:textSize="15sp"
                android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout5"
                android:id="@+id/layout6">

                <TextView
                    android:id="@+id/vehicleLocationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity=""
                    android:layout_margin="5dp"
                    android:text="@string/location"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vehicleLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/vehicleLocationText"
                android:text="@string/location"
                android:textSize="15sp"
                android:textStyle="bold" />

            </RelativeLayout>


            <Button
                android:id="@+id/btnView"
                style="?android:buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonback"
                android:padding="5dp"
                android:layout_below="@+id/layout6"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/view_details"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


