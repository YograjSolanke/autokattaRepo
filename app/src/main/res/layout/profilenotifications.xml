                <!--android:id="@+id/profilefollowtime"-->
                <!--android:text="Day at time"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

                <RelativeLayout
                    android:id="@+id/relativefev"
                    android:layout_width="25dp"

                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"


                    >


                    <ImageView

                        android:layout_toLeftOf="@+id/vehicletxt"
                        android:visibility="gone"
                        android:background="@drawable/fav1"
                        android:id="@+id/fvrtimg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <ImageView
                        android:visibility="gone"

                        android:background="@drawable/fav2"
                        android:id="@+id/fvrtredimg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>


            </RelativeLayout>

            <View
                android:layout_below="@+id/relaprofilelike"
                android:background="#cccccc"
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>

            <RelativeLayout

                android:background="@color/white"
                android:layout_below="@+id/v1"
                android:id="@+id/relalike1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/profile"
                    android:id="@+id/imgnotilike"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/profilenamerel"
                    android:layout_toRightOf="@+id/imgnotilike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/storenametxt"
                        android:text="Name :"
                        android:textColor="#808080"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:hint="name"
                        android:textColor="#808080"
                        android:layout_toRightOf="@+id/storenametxt"
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/imgnotilike"
                    android:id="@+id/profilelocationrel"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/storetypetxt"
                        android:text="Location : "
                        android:textColor="#808080"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:hint="location"
                        android:textColor="#808080"
                        android:layout_toRightOf="@+id/storetypetxt"
                        android:id="@+id/profilelocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/profilenamerel"
                    android:id="@+id/profileworkrel"
                    android:layout_toRightOf="@+id/imgnotilike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/storelocationtxt"
                        android:text="Worked at : "
                        android:textColor="#808080"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:hint="work at"
                        android:layout_toRightOf="@+id/storelocationtxt"
                        android:id="@+id/profileworkat"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/profileworkrel"
                    android:id="@+id/profilewebsiterel"
                    android:layout_toRightOf="@+id/imgnotilike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/storewebsitetxt"
                        android:text="Website : "
                        android:textColor="#808080"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:hint="website"
                        android:layout_toRightOf="@+id/storewebsitetxt"
                        android:id="@+id/profilewebsite"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <!--<ImageView-->
                <!--android:layout_width="20dp"-->
                <!--android:layout_height="20dp"-->
                <!--android:background="@drawable/follow"-->
                <!--android:layout_below="@+id/profilewebsiterel"-->
                <!--android:id="@+id/followimg"-->
                <!--android:layout_marginRight="5dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_toLeftOf="@+id/followcnt"/>-->


                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/profilelocationrel"
                    android:id="@+id/re"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#808080"
                        android:id="@+id/followcnt"
                        android:text="follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/dot2"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/like"
                        android:text="."
                        android:id="@+id/dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="12sp"
                        android:layout_marginTop="5dp"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Like"
                        android:id="@+id/like"
                        android:gravity="center" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/dot"
                        android:textSize="12sp"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share"
                        android:id="@+id/share" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/share"
                        android:id="@+id/dot2"
                        android:text="."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_below="@+id/relalike1"
                android:background="#cccccc"

                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>


            <LinearLayout

                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_below="@+id/v2"
                android:id="@+id/relalike2"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearlike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/likeicon"
                        android:id="@+id/likeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/liketxt"
                        android:text="Like"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearunlike"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/unlikethumb"
                        android:id="@+id/unlikeimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textColor="@color/red"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/unliketxt"
                        android:text="Unlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearshare"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@android:drawable/ic_menu_share"
                        android:id="@+id/shareimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sharetxt"
                        android:text="Share"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearshare1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/autoshare"
                        android:id="@+id/shareimg1"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/sharetxt1"
                        android:text="Share"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_gravity="center"
                    android:background="#cccccc"
                    android:layout_width="1dp"
                    android:layout_height="20dp"></View>


                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/followicon"
                        android:id="@+id/followimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/followtxt"
                        android:text="Follow"
                        android:textColor="#808080"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:id="@+id/linearunfollow"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@drawable/followicon"
                        android:id="@+id/unfollowimg"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <TextView
                        android:textColor="@color/red"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/unfollowtxt"
                        android:text="Unfollow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>