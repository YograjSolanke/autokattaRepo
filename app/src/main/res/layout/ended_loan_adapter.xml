<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:elevation="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativelayoutmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#C8C9CC"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/loan_title"
                        android:textColor="#808080"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/title2"
                        android:enabled="false"
                        android:hint="-"
                        android:textColor="#808080" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/loanmelaimg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/rl1"
                    android:contentDescription="@string/app_name" />

                <RelativeLayout
                    android:id="@+id/relativelocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl1"
                    android:layout_toEndOf="@+id/loanmelaimg">

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/location" />

                    <TextView
                        android:id="@+id/setlocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/location"
                        android:text="@string/set_location" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativelocation"
                    android:layout_toEndOf="@+id/loanmelaimg">

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/address" />

                    <TextView
                        android:id="@+id/setaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/address"
                        android:text="@string/set_address" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeaddress"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/start2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:text="@string/start"
                        android:textColor="#808080"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/datetime1"
                        android:text="&amp;"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/editTime"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="57dp"
                        android:layout_toEndOf="@+id/datetime1"
                        android:enabled="false"
                        android:hint="@string/time"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/datetime1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="45dp"
                        android:layout_toEndOf="@+id/start2"
                        android:enabled="false"
                        android:hint="@string/date"
                        android:textColor="#808080" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl4"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/end2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:text="@string/end"
                        android:textColor="#808080"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="25dp"
                        android:layout_toEndOf="@+id/datetime2"
                        android:text="&amp;"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/editText"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="57dp"
                        android:layout_toEndOf="@+id/datetime2"
                        android:enabled="false"
                        android:hint="@string/time"
                        android:textColor="#808080" />

                    <TextView
                        android:id="@+id/datetime2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@+id/end2"
                        android:enabled="false"
                        android:hint="@string/date"
                        android:textColor="#808080" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativelayoutmain"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/relatebutton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#80bebebe"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="@string/preview"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:text="Share"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/relativeshare"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/buttonback"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/share1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"
                            android:background="@drawable/button_background"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/autoshare"
                            android:text="@string/share"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/textshare"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@+id/share1"
                            android:background="@drawable/buttonback"
                            android:gravity="center"
                            android:text="@string/cap_share"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/card_view"
        android:background="@color/grey" />

</RelativeLayout>