<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reltitlerow"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/titletext"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="My Search"
                    android:background="@drawable/buttonback"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rel"
                android:layout_below="@+id/reltitlerow">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category :"
                    android:textColor="#808080"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:id="@+id/textView2"

                    />

                <ImageView
                    android:id="@+id/editpen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:padding="7dp"
                    android:src="@drawable/ic_mode_edit_black_24dp" />

                <ImageView
                    android:id="@+id/deletevehi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/editpen"
                    android:padding="7dp"
                    android:src="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/sharesearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:layout_below="@+id/deletevehi"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/ic_menu_share" />

                <ImageView
                    android:id="@+id/sharesearch1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="7dp"
                    android:layout_below="@+id/sharesearch"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/autoshare" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/favsearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/sharesearch1"
                    android:padding="7dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/fav1" />

                <ImageView
                    android:id="@+id/unfavsearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/sharesearch1"
                    android:padding="7dp"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:src="@drawable/fav2" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:text="-"
                    android:textColor="#808080"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/mysearch_category"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView2"
                    android:layout_toEndOf="@+id/textView2" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand :"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:layout_marginTop="5dip"
                    android:id="@+id/textView3"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#808080"
                    android:id="@+id/mysearch_brand"
                    android:layout_marginLeft="5dip"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:layout_toEndOf="@+id/textView3" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model :"
                    android:id="@+id/textView5"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="-"
                    android:textColor="#808080"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/mysearch_model"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:layout_toEndOf="@+id/textView5" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price :"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:layout_marginTop="5dip"
                    android:id="@+id/textView6"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="-"
                    android:textColor="#808080"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/mysearch_price"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_toRightOf="@+id/textView6"
                    android:layout_toEndOf="@+id/textView6" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year :"
                    android:id="@+id/textView7"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="-"
                    android:textColor="#808080"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/mysearch_year"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_toRightOf="@+id/textView7"
                    android:layout_toEndOf="@+id/textView7" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Of Search:"
                    android:id="@+id/textView8"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="-"
                    android:textColor="#808080"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/searchdate"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_toRightOf="@+id/textView8"
                    android:layout_toEndOf="@+id/textView8" />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Leads:"
                    android:id="@+id/textView9"
                    android:textColor="#808080"
                    android:textStyle="bold"
                    android:layout_marginTop="5dip"
                    android:layout_below="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="-"
                    android:textColor="#808080"
                    android:layout_marginLeft="5dip"
                    android:id="@+id/buyerleads"
                    android:layout_alignTop="@+id/textView9"
                    android:layout_toRightOf="@+id/textView9"
                    android:layout_toEndOf="@+id/textView9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel"
                android:id="@+id/relbutton"
                android:padding="5dp">

                <Button
                    android:id="@+id/stopsearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Stop Notification"
                    android:background="@drawable/buttonback"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:visibility="visible"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true" />

                <Button
                    android:id="@+id/startsearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Start Notification"
                    android:background="@drawable/buttonback"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relnote"
                android:layout_below="@+id/relbutton"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If not activated, search will be deleted on "
                    android:textColor="#2C3343"
                    android:padding="5dp"

                    />

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_below="@+id/txtnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="bold"
                    android:textColor="#2C3343"
                    android:padding="5dp"

                    />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>