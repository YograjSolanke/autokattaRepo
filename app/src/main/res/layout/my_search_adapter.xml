<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/card_margin"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:foreground="?attr/selectableItemBackground"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/reltitlerow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/titletext"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/buttonback"
                    android:gravity="center"
                    android:text="My Search"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reltitlerow">

                <ImageView
                    android:id="@+id/editpen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/app_name"
                    android:padding="7dp"
                    android:src="@drawable/ic_mode_edit_black_24dp" />

                <ImageView
                    android:id="@+id/deletevehi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/editpen"
                    android:contentDescription="@string/app_name"
                    android:padding="7dp"
                    android:src="@drawable/ic_delete" />

                <ImageView
                    android:id="@+id/sharesearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/deletevehi"
                    android:contentDescription="@string/app_name"
                    android:padding="7dp"
                    android:src="@android:drawable/ic_menu_share"
                    android:tint="@color/button_grey" />

                <ImageView
                    android:id="@+id/sharesearch1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/sharesearch"
                    android:contentDescription="@string/app_name"
                    android:padding="7dp"
                    android:src="@drawable/autoshare" />

                <ImageView
                    android:id="@+id/favsearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/sharesearch1"
                    android:contentDescription="@string/app_name"
                    android:padding="7dp"
                    android:src="@mipmap/heart_liked"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/unfavsearch"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/sharesearch1"
                    android:contentDescription="@string/app_name"
                    android:padding="7dp"
                    android:src="@mipmap/ic_heart_like"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Category :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mysearch_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="5dip"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textView2"
                    android:text="NA"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Brand :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mysearch_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView3"
                    android:text="NA"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Model :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mysearch_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView5"
                    android:text="NA"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Price :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mysearch_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView6"
                    android:text="NA"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView6"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Year :"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mysearch_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView7"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView7"
                    android:text="NA"
                    android:textColor="#808080" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView7"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Date Of Search:"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/searchdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView8"
                    android:text="NA"
                    android:textColor="#808080" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView8"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dip"
                    android:text="Search Leads:"
                    android:textColor="#808080"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/buyerleads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView9"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/textView9"
                    android:text="NA"
                    android:textColor="#808080" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel"
                android:padding="5dp">

                <Button
                    android:id="@+id/stopsearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/buttonback"
                    android:padding="5dp"
                    android:text="Stop Notification"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/startsearch"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/orange_back"
                    android:padding="5dp"
                    android:text="Start Notification"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relnote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relbutton"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txtnote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="If not activated, search will be deleted on "
                    android:textColor="#2C3343" />

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtnote"
                    android:padding="5dp"
                    android:text="Date"
                    android:textColor="#2C3343"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/vieww"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/card_view"
        android:background="@color/grey" />
</RelativeLayout>